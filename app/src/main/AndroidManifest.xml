<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/RestaurantThemeLight"
        tools:targetApi="31">

        <activity
            android:name=".view.activities.ActivityLoading"
            android:exported="true"
            android:label="Restaurant"
            android:theme="@style/RestaurantThemeLight">
        </activity>

        <activity
            android:name=".view.activities.LoginFragment"
            android:exported="true"
            android:theme="@style/RestaurantThemeLight">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.RegisterFragment"
            android:exported="false"
            android:theme="@style/RestaurantThemeLight"
            tools:ignore="AppLinkUrlError">
        </activity>

        <activity
            android:name=".view.activities.MainActivity"
            android:exported="true"
            android:label="Restaurant"
            android:theme="@style/RestaurantThemeLight">
        </activity>

        <activity
            android:name=".view.activities.FinalizeOrderFragment"
            android:exported="false"
            android:theme="@style/RestaurantThemeLight"
            tools:ignore="AppLinkUrlError">
        </activity>

    </application>
</manifest>