<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#616161"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeCardChild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/thirdary_color"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageFood"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:importantForAccessibility="no"
                app:shapeAppearanceOverlay="@style/ImageRounded" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imageFood"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="64dp"
                android:layout_toStartOf="@id/checkboxFood"
                android:layout_toEndOf="@id/imageFood"
                android:fontFamily="@font/sul_sans_regular"
                android:importantForAccessibility="no"
                android:textColor="@color/primary_color" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/checkboxFood"
                android:layout_alignTop="@id/imageFood"
                android:layout_alignEnd="@id/checkboxFood" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkboxFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageFood"
                android:layout_alignParentEnd="true"
                app:buttonTint="@color/primary_color" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>