<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"
    android:orientation="vertical"
    android:padding="8dp">

    <!--    <androidx.core.widget.NestedScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->
    <!--        &lt;!&ndash; Screen content goes here. &ndash;&gt;-->
    <!--    </androidx.core.widget.NestedScrollView>-->

    <!--  AppBar of SearchBar  -->

    <!--      Desabilitado para testar a rolagem da searchview  -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarSearch"
        style="@style/AppBarLayout.Style.Local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp">

            <com.google.android.material.search.SearchBar
                android:id="@+id/searchBarFoods"
                style="@style/SearchBar.Style.Local"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toStartOf="@id/imageFilterButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/imageFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_toEndOf="@id/searchBarFoods"
                android:background="@drawable/ic_chip_filter_list"
                app:layout_constraintBottom_toBottomOf="@id/searchBarFoods"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/searchBarFoods" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.search.SearchView
        android:id="@+id/searchViewFoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/search_bar_hint"
        app:layout_anchor="@id/searchBarFoods">

    </com.google.android.material.search.SearchView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabFoodSections"
        style="@style/TabStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/TabTextStyle" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerFoodSections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/thirdary_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFoods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp" />

</LinearLayout>