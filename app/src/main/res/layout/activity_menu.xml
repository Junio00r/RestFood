        <!--  AppBar of SearchBar  -->
        <!--      Desabilitado para testar a rolagem da searchview  -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarSearch"
            style="@style/AppBarLayout.Style.Local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="14dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp">

                <com.google.android.material.search.SearchBar
                    android:id="@+id/searchBarFoods"
                    style="@style/SearchBar.Style.Local"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toStartOf="@id/imageFilterButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/imageFilterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toEndOf="@id/searchBarFoods"
                    android:background="@drawable/ic_chip_filter_list"
                    app:layout_constraintBottom_toBottomOf="@id/searchBarFoods"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/searchBarFoods" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.search.SearchView
            android:id="@+id/searchViewFoods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/search_bar_hint">

        </com.google.android.material.search.SearchView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabFoodSections"
            style="@style/TabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/TabTextStyle" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pagerFoodSections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null" />

    </LinearLayout>

