<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.Material3.Light.NoActionBar">

        <!--  Set text appearance all texts of App  -->
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:saveEnabled">true</item>

        <!--  Widgets styles  -->
        <item name="materialSearchBarStyle">@style/SearchBar.App.Style</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <!--  Text Appearance for access all app  -->
    <style name="TextAppearance.App" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/sul_sans_regular</item>
        <item name="android:fontFamily">@font/sul_sans_regular</item>
        <item name="android:textColor">@color/black_two</item>
        <item name="hintTextAppearance">@font/sul_sans_regular</item>
    </style>

    <!--  BottomNavigationView  -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="android:backgroundTint">@color/gray_three</item>
    </style>

    <!--  Searchbar  -->
    <style name="SearchBar.App.Style" parent="Widget.Material3.SearchBar">
        <item name="backgroundTint">@color/white</item>
        <item name="hintTextAppearance">@color/red_dark</item>
        <item name="hintTextColor">@color/red_dark</item>
        <item name="android:textColorHint">@color/red_dark</item>
    </style>

</resources>