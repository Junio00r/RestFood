<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  TabLayou  -->
    <style name="TabStyle" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@drawable/radius_tab_layout</item>
        <item name="android:backgroundTint">@color/thirdary_color</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/secondary_color</item>
        <item name="tabSelectedTextColor">@color/secondary_color</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/primary_color</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabRippleColor">@color/fourty_color</item>
    </style>

    <!--  TabTextLayouy -->
    <style name="TabTextStyle" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/font_tab</item>
    </style>

    <!--  SearchView  -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchBar</item>
        <item name="android:hint">@string/search_bar_hint</item>
        <item name="backgroundTint">@color/thirdary_color</item>
    </style>

    <!--  ShapeableImageView  -->
    <style name="ImageRounded">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--  SearchBar  -->
    <style name="SearchBarStyle" parent="Theme.MaterialComponents">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

</resources>