<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--  Login Screen  -->

    <!--  Button  -->
    <style name="Button.Login.Style.Local" parent="">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/gray_one</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Menu Screen  -->

    <!--App Bar Layout Style Local-->
    <style name="AppBarLayout.Style.Local" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@null</item>
    </style>

    <!--  SearchBar  -->
    <style name="SearchBar.Style.Local" parent="Widget.Material3.SearchBar">
        <item name="backgroundTint">@color/white</item>
        <item name="android:hint">@string/search_bar_hint</item>
        <item name="defaultMarginsEnabled">false</item>
        <item name="android:fontFamily">@font/sul_sans_regular</item>
        '       <!--    put hint color one    -->
    </style>

    <!--  SearchView  -->
    <style name="SearchView.Style.Local" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchBar</item>
        <item name="android:hint">@string/search_bar_hint</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!--Popup Style Local-->
    <style name="PopupMenu.View.Local" parent="Widget.Material3.PopupMenu">
        <item name="android:popupElevation">20dp</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App</item>
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <!--  TabLayout  -->
    <style name="TabSection.Style.Local" parent="Widget.Material3.TabLayout">
        <item name="android:background">@drawable/bg_radius_tab_layout</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@color/gray_two</item>
    </style>

    <!--  TabTextLayout -->
    <style name="TabText.Layout.Style.Local" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sul_sans_regular</item>
    </style>

    <!--  Shapeable ImageView  -->
    <style name="Shapeable.ImageRounded.Style.Local" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--Bottom App Bar Layout Style Local-->
    <style name="BottomAppBar.Style.Local" parent="">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">11dp</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textStartPadding">0dp</item>
        <item name="fontFamily">@font/din_regular</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="rippleColor">@color/gray_three</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:maxWidth">256dp</item>
    </style>
    
    <style name="Theme">

    </style>

</resources>