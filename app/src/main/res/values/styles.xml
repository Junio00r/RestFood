<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  TabLayou  -->
    <style name="TabStyle" parent="Widget.Material3.TabLayout">
        <item name="android:background">@drawable/radius_tab_layout</item>
        <item name="android:backgroundTint">@color/thirdary_color</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/secondary_color</item>
        <item name="tabSelectedTextColor">@color/secondary_color</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/primary_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@color/fourty_color</item>
    </style>

    <!--  TabTextLayouy -->
    <style name="TabTextStyle" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/font_tab</item>
    </style>

    <!--  SearchView  -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchBar</item>
        <item name="android:hint">@string/search_bar_hint</item>
        <item name="backgroundTint">@color/thirdary_color</item>
    </style>

    <!--  ShapeableImageView  -->
    <style name="ImageRounded">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--  SearchBar  -->
    <style name="SearchBar.Style.Local" parent="Widget.Material3.SearchBar">
        <item name="backgroundTint">@color/thirdary_color</item>
        <item name="android:hint">@string/search_bar_hint</item>
        <item name="defaultMarginsEnabled">false</item>
        <item name="android:fontFamily">@font/font_tab</item>
        '       <!--    put hint color one    -->
    </style>

    <!--Popup Style Local-->
    <style name="PopupMenu.View.Local" parent="Widget.Material3.PopupMenu">
        <item name="android:popupElevation">20dp</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App</item>
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <!--App Bar Layout Style Local-->
    <style name="AppBarLayout.Style.Local" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@null</item>
    </style>

</resources>