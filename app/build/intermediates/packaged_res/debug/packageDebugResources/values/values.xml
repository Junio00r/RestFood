    <string name="button_enter">ENTRAR</string>
    <string name="button_realizar_pedido">REALIZAR PEDIDO</string>
    <string name="button_sign_up">CADASTRAR</string>
    <string name="floating_button_cancel" ns1:ignore="ButtonCase">CANCELAR</string>
    <string name="floating_button_realizar_pedido">CONTINUAR</string>
    <string name="image_food">Food Name</string>
    <string name="search_bar_hint">Search a Food</string>
    <string name="tab_item_bebidas">Bebidas</string>
    <string name="tab_item_entradas">Entradas</string>
